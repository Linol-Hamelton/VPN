[Unit]
Description=VPN Telegram Onboarding Bot
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/VPN
EnvironmentFile=/etc/vpn-onboard-bot.env
ExecStart=/opt/vpn-onboard-bot/.venv/bin/python /root/VPN/scripts/telegram-bot/onboard_bot.py --env-file /etc/vpn-onboard-bot.env
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

