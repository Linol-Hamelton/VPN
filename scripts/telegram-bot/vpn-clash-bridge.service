[Unit]
Description=VPN Clash Deeplink Bridge
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/VPN
ExecStart=/usr/bin/python3 /root/VPN/scripts/telegram-bot/clash_deeplink_bridge.py --host 0.0.0.0 --port 25501
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
